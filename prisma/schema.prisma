generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Produtos {
  id                Int @id @unique @default(autoincrement())
  nome              String @unique
  preco             Int @default(0)
  pedidos           Pedidos[]
  }

model Estoques {
  id                Int @id @unique @default(autoincrement())
  quantidade        Int? @default(0)
}

model Clientes {
  id                Int @id @unique @default(autoincrement())
  nome              String @unique
  pedidos           Pedidos[]
}

model Pedidos {
  id                Int @id @unique @default(autoincrement())
  produto           Produtos @relation(fields: [produtos_id], references: [id])
  produtos_id       Int
  cliente           Clientes @relation(fields: [cliente_id], references: [id])
  cliente_id        Int
  vendas            Vendas[]
}

model Vendas {
  id                Int @id @unique @default(autoincrement())
  pedido            Pedidos @relation(fields: [pedido_id], references: [id])
  pedido_id         Int @unique
}
